  "editor.fontLigatures": true,
  "editor.formatOnSave": false,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "files.autoSave": "afterDelay",
  // Glob patterns for excluding folders and files
  "files.exclude": {
